{
  "name": "@the-list/app",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "types": "dist/app.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc --build",
    "dev": "node --watch --import tsx --env-file .env src/dev.ts",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "prebuild": "npm run clean",
    "db:migrate": "npm exec drizzle-kit generate:sqlite --out migrations --schema src/db/schema.ts",
    "db:push": "npm exec drizzle-kit push:sqlite",
    "db:studio": "npm exec drizzle-kit studio",
    "db:seed": "node --import tsx --env-file .env src/db/seed.ts"
  },
  "keywords": [],
  "author": "githop",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.7.0",
    "@libsql/client": "^0.5.2",
    "@the-list/env": "^1.0.0",
    "drizzle-orm": "^0.29.4",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.0.3"
  },
  "devDependencies": {
    "drizzle-kit": "^0.20.14",
    "tsx": "^4.7.1"
  }
}
